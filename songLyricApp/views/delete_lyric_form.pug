extends layout

block content
  .confirm-delete
    h1 Confirm Delete
    p Are you sure you want to delete this lyric?
    hr
    form.confirm-delete-form(method='POST', action=`/lyrics/${lyric._id}/delete`)
      input(type='hidden', name='_method', value='DELETE')
      button.btn.btn-danger(type='submit') Confirm Delete
      a.btn.btn-secondary(href='/lyrics') Cancel
